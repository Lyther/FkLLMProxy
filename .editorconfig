root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Web/Config files: 2 spaces
[*.{js,ts,jsx,tsx,json,yml,yaml,html,css,scss}]
indent_size = 2

# Makefiles: tabs
[Makefile]
indent_style = tab

# Git commit messages: 72 chars
[COMMIT_EDITMSG]
max_line_length = 72

# Markdown: no trailing whitespace trimming
[*.md]
trim_trailing_whitespace = false

